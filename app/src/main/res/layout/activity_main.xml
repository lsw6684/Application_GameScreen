<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <GridLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:columnCount="2"
        android:paddingStart="30dp"
        android:paddingLeft="30dp"
        android:rowCount="3">
        <TextView
            android:id="@+id/player"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:text="@string/player"
            android:textSize="40sp"
            />


        <ImageView
            android:id="@+id/ash"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_rowSpan="2"
            android:layout_column="0"
            android:layout_gravity="fill_vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ash_ketchum"

            />

        <TextView
            android:id="@+id/code"
            android:layout_row="1"
            android:layout_column="1"
            android:text="@string/code"
            android:textSize="30sp"

            />

        <TextView
            android:id="@+id/name"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:text="@string/name"
            android:textSize="30sp"

            />
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/battle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/battle" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#F5CC1E"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_weight="3">

            <Button
                android:id="@+id/mid"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true" />

            <Button
                android:id="@+id/left"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/mid" />

            <Button
                android:id="@+id/right"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/mid" />

            <Button
                android:id="@+id/up"
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:layout_above="@+id/mid"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/down"
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:layout_below="@+id/mid"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:padding="10dp">

            <Button
                android:id="@+id/big"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginBottom="5dp" />

            <Button
                android:id="@+id/big2"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_below="@+id/big"
                android:layout_alignParentRight="true" />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>